---
import Layout from '../../layouts/Layout.astro'
import { getCollection } from 'astro:content'

const posts = (await getCollection('components')).sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf())
---

<Layout>
    <main>
        <section>
            <ul>
                {
                    posts.map((post) => (
                        <li>
                            <a href={`/components/${post.slug}/`}>
                                <h4 class="title">{post.data.title}</h4>
                                <p class="date" />
                            </a>
                        </li>
                    ))
                }
            </ul>
        </section>
    </main>
</Layout>

