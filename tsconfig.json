{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "types": ["vite/client"],
        "emitDeclarationOnly": true,
        "declarationDir": "./dist/type",
        "declaration": true,
        "isolatedModules": false,
        "resolveJsonModule": true,
        "paths": {
            "@cn-ui/core": ["./src/index"]
        }
    },
    "include": [
        "src/**/*",
        "story/**/*",
        "package/headless/src/useStateManager.tsx",
        "package/headless/src/useStateManager.tsx",
        "package/highlight/src/useCodeStyle.tsx",
        "package/highlight/src/useCodeStyle.tsx"
    ]
}
